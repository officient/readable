{
  "baseline": ".baseline.json",
  "paths": [
    "src/"
  ],
  "rules": {
    "empty-catch": true,
    "namespace-max-files": 2,
    "file-max-size": 200,
    "loop-max-nest": 1,
    "class-comment": true,
    "forbidden-function-prefix": ["check"],
    "forbidden-functions": [
      "eval", "print_r", "var_export", "var_dump", "phpinfo", "exec"
    ],
    "variable-length": {
      "min-length": 3,
      "whitelist": ["$id", "$i"]
    }
  }
}
