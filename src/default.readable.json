{
  "paths": [
    "src/",
    "!src/vendor/"
  ],
  "rules": {
    "empty-catch": true,
    "if-assigment": true,
    "complex-if": true,
    "namespace-max-files": 15,
    "loop-max-size": 15,
    "loop-max-nest": 2,
    "max-nest": 3,
    "ternary-max-length": 50,
    "function-max-size": 50,
    "class-comment": true,
    "missing-braces": true,
    "forbidden-function-prefix": ["check"],
    "file-max-size": {
      "max-lines": 200,
      "include-comments": true,
      "include-empty-lines": true
    },
    "argument-override": {
      "allow-pass-by-reference": true
    },
    "forbidden-functions": [
      "eval", "print_r", "var_export", "var_dump", "phpinfo", "exec"
    ],
    "variable-length": {
      "min-length": 3,
      "whitelist": ["$id", "$i"]
    }
  }
}
